{
    "compilerOptions": {
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "keyofStringsOnly": true,
        "strict": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./src/**/*.test.ts",
        "./src/**/*.test.tsx",
        "node_modules",
        "dist"
    ]
}
